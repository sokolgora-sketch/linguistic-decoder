rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // Global analysis cache: deterministic docId = word|mode|engineVersion|alphabet
    match /analyses/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Per-user history: users/{uid}/history/{docId}
    match /users/{uid}/history/{hid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
