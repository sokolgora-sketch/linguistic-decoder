rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // Global analysis cache: deterministic docId = word|mode|engineVersion|alphabet
    match /analyses/{docId} {
      allow read: if true;
      allow write: if request.auth != null
        && docId == (request.resource.data.analysis.word + '|' + request.resource.data.analysis.mode + '|' + request.resource.data.analysis.alphabet + '|' + request.resource.data.analysis.engineVersion)
        && request.resource.data.analysis.primary.voice_path.size() > 0;
    }

    // Per-user history: users/{uid}/history/{hid}
    match /users/{uid}/history/{hid} {
      allow read, write: if request.auth != null && request.auth.uid == uid && request.resource.data.createdAt == request.time;
    }
  }
}
