rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    match /analyses/{docId} {
      // Anyone signed-in can write; anyone can read
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.data.analysis.word is string
        && request.resource.data.analysis.mode in ['strict','open']
        && request.resource.data.analysis.alphabet is string
        && request.resource.data.analysis.engineVersion is string
        && request.resource.data.analysis.primary.voice_path.size() > 0
        && docId == (
          request.resource.data.analysis.word + '|' +
          request.resource.data.analysis.mode + '|' +
          request.resource.data.analysis.alphabet + '|' +
          request.resource.data.analysis.engineVersion
        );
    }

    // Per-user history: users/{uid}/history/{hid}
    match /users/{uid}/history/{hid} {
      allow read, write: if request.auth != null && request.auth.uid == uid && request.resource.data.createdAt == request.time;
    }
  }
}
